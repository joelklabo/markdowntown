{
  "name": "markdowntown",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint . && pnpm lint:hex",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "E2E_BASE_URL=${E2E_BASE_URL:-http://localhost:3000} vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "lint:md": "node scripts/lint-markdown.js \"**/*.md\" \"!node_modules/**\" \"!.next/**\" \"!coverage/**\" \"!dist/**\"",
    "lint:hex": "node scripts/check-no-raw-hex.mjs",
    "format:styles": "prettier src/app/globals.css --write",
    "docs:openapi": "node scripts/validate-openapi.js",
    "analyze": "ANALYZE=true pnpm exec next build --webpack",
    "bundle:check": "node scripts/check-bundle-size.mjs",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test:visual": "npx playwright test --config=playwright-visual.config.ts",
    "atlas:validate": "node --no-warnings scripts/atlas/validate.ts",
    "atlas:index": "node scripts/atlas/index.mjs",
    "atlas:fetch": "node --no-warnings scripts/atlas/fetch-sources.ts",
    "atlas:extract": "node scripts/atlas/extract.mjs",
    "atlas:changelog": "node scripts/atlas/changelog.mjs",
    "atlas:update": "pnpm atlas:fetch && pnpm atlas:extract && pnpm atlas:index && pnpm atlas:validate && pnpm atlas:changelog",
    "prisma:validate": "prisma validate",
    "prepare": "husky"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.18.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@sentry/core": "^8.55.0",
    "@sentry/nextjs": "^8.55.0",
    "@types/jszip": "^3.4.1",
    "class-variance-authority": "^0.7.1",
    "jszip": "^3.10.1",
    "next": "16.0.5",
    "next-auth": "^4.24.13",
    "posthog-js": "^1.200.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "web-vitals": "^4.2.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.6",
    "@playwright/test": "1.57.0",
    "@storybook/addon-a11y": "^10.1.3",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^10.1.3",
    "@storybook/nextjs": "^10.1.3",
    "@storybook/react": "^10.1.3",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "4.0.14",
    "baseline-browser-mapping": "^2.9.6",
    "eslint": "^9",
    "eslint-config-next": "16.0.5",
    "globby": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.19.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.41",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "prisma": "^5.18.0",
    "remark": "^15.0.1",
    "remark-lint": "^10.0.1",
    "remark-parse": "^11.0.0",
    "storybook": "^10.1.3",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "unified": "^11.0.5",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --fix --max-warnings=0"
    ],
    "*.md": [
      "pnpm lint:md"
    ]
  }
}
